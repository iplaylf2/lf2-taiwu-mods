<Project>
    <PropertyGroup>
        <SolutionRoot>
            $([System.IO.Path]::GetFullPath('$([MSBuild]::GetDirectoryNameOfFileAbove($(MSBuildThisFileDirectory),'lf2-taiwu-mods.slnx'))'))
        </SolutionRoot>
        <GameLib>$(SolutionRoot)/game-lib</GameLib>

        <IsBackend Condition="$(MSBuildProjectName.EndsWith('.Backend'))">true</IsBackend>
        <IsFrontend Condition="$(MSBuildProjectName.EndsWith('.Frontend'))">true</IsFrontend>

        <TargetFramework Condition="'$(IsBackend)' == 'true'">net6.0</TargetFramework>
        <TargetFramework Condition="'$(IsFrontend)' == 'true'">netstandard2.0</TargetFramework>
    </PropertyGroup>

    <PropertyGroup>
        <LangVersion>latest</LangVersion>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    </PropertyGroup>
</Project>